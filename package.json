{
  "name": "@lickle/rx",
  "version": "0.1.13",
  "description": "A minimal reactive programming library with Observables, Subjects, and composable operators",
  "author": "Dan Beaven <dm.beaven@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pingid/lickle-rx.git"
  },
  "license": "MIT",
  "type": "module",
  "main": "lib/cjs/index.js",
  "types": "lib/ts/index.d.ts",
  "module": "lib/esm/index.js",
  "sideEffects": false,
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./lib/ts/index.d.ts",
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js"
    },
    "./*": {
      "types": "./lib/ts/*.d.ts",
      "import": "./lib/esm/*.js",
      "require": "./lib/cjs/*.js"
    }
  },
  "files": [
    "lib",
    "src",
    "README.md",
    "package.json",
    "!**/*.test.*",
    "tsconfig.json"
  ],
  "keywords": [
    "observable",
    "rx",
    "reactive",
    "stream",
    "subject",
    "operator",
    "functional",
    "rxjs",
    "frp"
  ],
  "scripts": {
    "build": "npm run typecheck && npm run esm && npm run cjs",
    "format": "prettier --write .",
    "test": "vitest",
    "esm": "tsc -p ./tsconfig.esm.json",
    "cjs": "tsc -p ./tsconfig.cjs.json > /dev/null 2>&1 || true",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "symbol-observable": "^4.0.0"
  },
  "devDependencies": {
    "@lickle/dom": "^0.0.3",
    "jsr": "^0.13.5",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "all"
  }
}
